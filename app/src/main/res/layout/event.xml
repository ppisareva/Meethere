<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="#e4e4e4">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_margin="7dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="140dp"
                android:id="@+id/event_name"
                android:maxLines="2"
                android:minLines="1"
                android:text="Концерт Макса Кор на ВДНХ"
                android:layout_below="@+id/event_image"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/check_join"
                android:src="@drawable/ic_check_black_24dp"
                android:layout_alignBottom="@+id/event_time"
                android:layout_alignRight="@+id/event_name"
                android:layout_alignEnd="@+id/event_name" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/event_image"
                android:scaleType="centerCrop"
                fresco:placeholderImage="@drawable/cappuccino"
                android:layout_below="@+id/event_budget"
                android:layout_alignLeft="@+id/event_budget"
                android:layout_alignStart="@+id/event_budget"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_budget"
                android:text="Бесплатно"
                android:gravity="bottom"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                card_view:textColor="@android:color/holo_green_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_people_20"
                android:gravity="bottom"
                android:text="45 "
                android:layout_above="@+id/event_image"
                android:layout_alignRight="@+id/event_image"
                android:layout_alignEnd="@+id/event_image"
                android:textColor="@android:color/holo_purple"
                android:id="@+id/event_attendence" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_time"
                android:text="12. 12. 12"
                android:textSize="12dp"
                android:textColor="#2277e5"
                android:layout_below="@+id/event_name"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>