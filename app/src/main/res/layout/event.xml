<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        card_view:cardCornerRadius="10dp"
        card_view:cardBackgroundColor="#e4e4e4"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/event_image"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="9dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                fresco:placeholderImage="@drawable/cappuccino"
                />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Рыбалка на Десне"
                android:id="@+id/event_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/event_image"
                android:layout_marginTop="10dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkBox_join"
               android:button="@drawable/chack_box_join"
                android:layout_alignTop="@+id/event_name"
                android:layout_toRightOf="@+id/event_name"
                android:layout_toEndOf="@+id/event_name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.09.2016, 18:00"
                android:id="@+id/time_category"
                android:layout_below="@+id/event_name"
                android:textSize="9dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:textColor="#2277e5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="БЕСПЛАТНО"
                android:id="@+id/budget_category"
                android:textColor="#25b433"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/time_category"
                android:layout_alignStart="@+id/time_category"
                android:layout_marginBottom="5dp" />
        </RelativeLayout>



</android.support.v7.widget.CardView>
</LinearLayout>