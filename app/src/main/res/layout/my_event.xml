<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@android:color/white">

    <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/image_my_event"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                fresco:placeholderImage="@drawable/cappuccino"
                android:layout_marginLeft="16dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:text="name"
                android:id="@+id/name_my_event"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/image_my_event"
                android:layout_marginTop="2dp"
                android:textSize="15dp"
                android:layout_marginRight="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:id="@+id/time_my_event"
                android:textSize="10dp"
                android:layout_alignBottom="@+id/image_my_event"
                android:layout_alignLeft="@+id/address_myevent"
                android:layout_alignStart="@+id/address_myevent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Богатырская 6, Киев"
                android:id="@+id/address_myevent"
                android:textSize="12dp"
                android:textColor="#2849f0"
                android:layout_below="@+id/name_my_event"
                android:layout_alignLeft="@+id/name_my_event"
                android:layout_alignStart="@+id/name_my_event"
                android:layout_marginTop="2dp" />

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_event"
                android:layout_alignTop="@+id/address_myevent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/check_join"
        android:src="@drawable/ic_check_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/my_event"
        android:layout_alignEnd="@+id/my_event"
        android:layout_margin="7dp" />

</RelativeLayout>
