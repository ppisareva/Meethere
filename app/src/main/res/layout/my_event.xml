<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:background="@android:color/white">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_my_event"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"
        fresco:placeholderImage="@drawable/cappuccino" />

    <TextView
        android:id="@+id/my_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/address_myevent" />

    <ImageView
        android:id="@+id/check_join"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/my_event"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/my_event"
        android:layout_margin="7dp"
        android:src="@drawable/ic_check_black_24dp" />

    <TextView
        android:id="@+id/time_my_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/check_join"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/image_my_event"
        android:layout_toRightOf="@+id/image_my_event"
        android:text="time"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/budget_myevent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_my_event"
        android:layout_toEndOf="@+id/image_my_event"
        android:layout_toRightOf="@+id/image_my_event"
        android:text="Бесплатно"
        android:textColor="#2849f0" />

    <TextView
        android:id="@+id/myevent_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/budget_myevent"
        android:layout_alignEnd="@+id/check_join"
        android:layout_alignRight="@+id/check_join"
        android:drawableRight="@drawable/ic_people_20"
        android:text="34 " />

    <TextView
        android:id="@+id/name_my_event"
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:layout_below="@+id/time_my_event"
        android:layout_toEndOf="@+id/image_my_event"
        android:layout_toRightOf="@+id/image_my_event"
        android:text="поход"
        android:textSize="16dp"
        android:layout_marginTop="7dp" />

</RelativeLayout>
