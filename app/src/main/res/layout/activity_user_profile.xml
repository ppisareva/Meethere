<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:configChanges="orientation"
    android:layout_height="match_parent"
    tools:context="com.example.polina.meethere.activities.UserProfileActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:id="@+id/conteiner"></LinearLayout>


    <android.support.v7.widget.RecyclerView
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:id="@+id/list_of_created_events"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/profile_header">
      <include layout="@layout/user_header"/>

    </com.bartoszlipinski.recyclerviewheader2.RecyclerViewHeader>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privat_info"
        android:id="@+id/private_information"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />
</RelativeLayout>

