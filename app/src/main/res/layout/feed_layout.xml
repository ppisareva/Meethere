<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/feed"
    android:layout_height="wrap_content"
    android:layout_margin="7dp">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_margin="7dp"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="50dp"
            android:layout_height="50dp"
            fresco:placeholderImage="@drawable/carrot"
            android:id="@+id/profile_image"
            android:scaleType="center" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shdvjhsDVhjSBDkjfbSJKdfbKJSDb vkjsdjkvbsdnv skjdvoisbdvjns jdv kjfvbn xvksndkv XN vKSJdbvj"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_toEndOf="@+id/profile_image"
            android:layout_marginLeft="7dp"
            android:maxLines="2"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/07 13:47"
            android:id="@+id/action_time"

            android:layout_below="@+id/user_name"
            android:layout_alignLeft="@+id/user_name"
            android:layout_alignStart="@+id/user_name"
            android:layout_marginTop="4dp"
            android:textSize="11sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Рыбалка на Десне"
            android:id="@+id/event_name"
            android:layout_below="@+id/profile_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp"
            android:textSize="17dp"
            android:layout_marginLeft="7dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="match_parent"
            android:id="@+id/event_image"
            android:scaleType="matrix"
            fresco:placeholderImage="@drawable/cappuccino"
            android:layout_below="@+id/event_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="7dp"
            android:layout_height="250dp" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_alignBottom="@+id/event_image"
            android:layout_alignParentLeft="true"
            android:theme="@style/Card"
            android:layout_alignParentStart="true"
            android:background="@color/green_transperent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_query_builder_white_24dp"
                android:id="@+id/imageView"
                android:layout_below="@+id/event_image"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/event_image"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_time"
                android:text="24, 30, 1990"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_budget"
                android:text="17"
                android:textSize="15dp"
                android:layout_alignTop="@+id/imageView3"
                android:layout_toLeftOf="@+id/imageView3"
                android:layout_toStartOf="@+id/imageView3"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:src="@drawable/ic_attach_money_white_24dp"
                android:id="@+id/imageView3"
                android:layout_width="17dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/event_time"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>