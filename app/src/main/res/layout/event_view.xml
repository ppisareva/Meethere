<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:theme="@style/Card"
    android:layout_marginTop="7dp"
    android:id="@+id/card"
    android:layout_marginRight="7dp"
    android:layout_height="250dp"
    android:layout_marginLeft="7dp">





    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_no_photo"
        android:id="@+id/image_my_event"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView19"
        android:layout_toEndOf="@+id/textView19"
        android:scaleType="centerCrop" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView47"
        android:background="@color/green_transperent"
        android:layout_alignTop="@+id/name_my_event" />

    <TextView
        android:text="10 грн"
        android:textSize="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/budget_myevent"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/time_my_event"
        android:layout_alignStart="@+id/time_my_event"
        android:layout_marginBottom="5dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myevent_people"
        android:textSize="18dp"
        android:drawableRight="@drawable/ic_user_24_withe"
        android:text="34 "
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="5dp" />


    <TextView
        android:text="Среда, 18:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:id="@+id/time_my_event"
        android:layout_above="@+id/budget_myevent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="7dp" />

    <TextView
        android:text="yurfghgjkggchhojufcglkjidsduioldfklfrderfjklkghygtdfluyftdfghjk"
        android:layout_width="match_parent"
        android:id="@+id/name_my_event"
        android:maxLines="2"
        android:textSize="18dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/date"
        android:layout_toRightOf="@+id/date"
        android:layout_toEndOf="@+id/date"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="25dp" />

    <TextView
        android:text="15 авг"
        android:id="@+id/date"
        android:textSize="20dp"
        android:maxLines="2"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/price_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/time_my_event"
        android:layout_alignLeft="@+id/time_my_event"
        android:layout_alignStart="@+id/time_my_event" />

    <ImageView
        android:layout_height="25dp"
        android:id="@+id/check_join"
        android:src="@drawable/ic_done_white_24dp"
        android:layout_alignTop="@+id/textView47"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="25dp" />


</RelativeLayout>