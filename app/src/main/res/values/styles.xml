<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">#ce000000</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="Profile" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#f5ffffff</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name="RangeSeekBar">
        <attr name="absoluteMinValue" format="integer|float" />
        <attr name="absoluteMaxValue" format="integer|float" />
        <attr name="singleThumb" format="boolean" />
    </declare-styleable>

    <style name="RadioButtonStyleMale" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/male_radio_button</item>
    </style>

    <style name="RadioButtonStyleFemale" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/female_radio_button</item>
    </style>

    <style name="RadioButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="RadioButtonStyleTime" parent="RadioButtonStyle">
        <item name="android:button">@drawable/time_radio_button</item>
    </style>

    <style name="RadioButtonStyleDistance" parent="RadioButtonStyle">
        <item name="android:button">@drawable/distance_radio_button</item>

    </style>

    <style name="RadioButtonStyleRating" parent="RadioButtonStyle">
        <item name="android:button">@drawable/rating_radio_button</item>

    </style>

    <style name="RadioButtonStyleLow" parent="RadioButtonStyle">
        <item name="android:button">@drawable/low_radio_button</item>

    </style>

    <style name="RadioButtonStyleHigh" parent="RadioButtonStyle">
        <item name="android:button">@drawable/high_radio_button</item>
    </style>

    <style name="Margin">
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="CategoryInProfile">
        <item name="android:background">@drawable/preferences</item>
        <item name="android:drawableEnd">@drawable/ic_cencel</item>
        <item name="android:layout_margin">3dp</item>


    </style>

</resources>
